<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/emergency"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/background"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:text="Username:"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12pt"
            android:id="@+id/textUser"
            android:layout_below="@+id/background"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/username"
            android:textSize="12pt"
            android:textColor="#FFFFFF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background"
            android:layout_alignRight="@+id/background"
            android:layout_alignEnd="@+id/background"
            android:layout_toRightOf="@+id/textUser"
            android:layout_toEndOf="@+id/textUser" />

        <TextView
            android:id="@+id/textPassword"
            android:text="Password:"
            android:textColor="#FFFFFF"
            android:textSize="12pt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignBaseline="@+id/password"
            android:layout_alignBottom="@+id/password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:textSize="12pt"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/textUser"
            android:layout_toEndOf="@+id/textPassword"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username" />
        <Button
            android:id="@+id/login_button"
            android:text="Login"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="39dp"
            android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/register_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Register"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_alignTop="@+id/login_button"
            android:layout_toRightOf="@+id/login_button"
            android:layout_toEndOf="@+id/login_button" />

</RelativeLayout>
